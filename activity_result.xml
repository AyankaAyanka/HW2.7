<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#232C3F">>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/category_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_constraintBottom_toBottomOf="parent"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            android:padding="10dp"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/heart_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="#DC366A"
            android:src="@drawable/heart"
            android:layout_marginStart="16dp"
            android:layout_constraintEnd_toEndOf="parent"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_constraintBottom_toBottomOf="parent"
            android:layout_constraintStart_toEndOf="@id/category_button"/>


        <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the nightlife of your city"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:paddingTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:textSize="25sp"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="#4687F0"
                android:layout_marginLeft="20px"/>

            <View
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="#4687F0"
                android:layout_marginLeft="20px"/>

            <View
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="#4687F0"
                android:layout_marginLeft="20px"/>

            <View
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="#4687F0"
                android:layout_marginLeft="20px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/accessibility_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessibility"
            android:textSize="17sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PriceðŸ’°"
            android:textSize="17sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participants"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="30px"/>

    </LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/button_next"
        android:layout_width="381dp"
        android:layout_height="71dp"
        android:backgroundTint="#4486F1"
        android:padding="12dp"
        android:text="Next"
        android:textSize="@android:dimen/system_app_widget_background_radius" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Category"
    android:textColor="@color/white"
    android:textSize="20sp"
android:paddingTop="16dp"/>

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:spinnerMode="dropdown" />

    </LinearLayout>

